---
import Hero from "../components/home/Hero.astro";
import RecentProjects from "../components/home/RecentProjects.astro";
import Tools from "../components/home/Tools.astro";
import RecentBlogPosts from "../components/home/RecentBlogPosts.astro";

import BaseLayout from "../layouts/BaseLayout.astro";
import Contact from "../components/home/Contact.astro";
---

<BaseLayout title="Home" pageTitle="Stephan Pfeiffer | Web Developer" description="Stephan Pfeiffer | Web Developer">
    <!-- Hero component: Displays the main hero section of the homepage. -->
    <Hero aria-label="Homepage Hero Section"/>
    
    <!-- Tools component: Showcases the tools used by the developer. -->
    <Tools aria-label="Developer Tools"/>
    
    <!-- Projects component: Lists the projects completed by the developer. -->
    <RecentProjects count={3} aria-label="Projects Overview"/>
    
    <!-- RecentBlogPosts component: Displays recent blog posts, limited to 3. -->
    <RecentBlogPosts count={3} aria-label="Recent Blog Posts"/>
    
    <!-- Contact component: Provides contact information and form. -->
    <Contact aria-label="Contact Information"/>
</BaseLayout>