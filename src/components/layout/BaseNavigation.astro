---
import { Icon } from 'astro-icon/components'
import MobileNavigation from "./MobileNavigation.astro";

const navigationItems = [
	{ name: "Projects", url: "/projects" },
	{ name: "Blog", url: "/blog" },
	{ name: "About Me", url: "/about" },
	{ name: "Contact", url: "#contact" },
];

const socialIcons = [
	{
    name: "Github",
    url: "https://github.com/Steph-The-Dev/",
    icon: "mdi:github",
  },
	{
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/stephanpfeiffer/",
		icon: "mdi:linkedin",
  },
];

---

<nav class="navbar">
    <a href="/" class="navbar-name">Stephan Pfeiffer</a>
    <div class="open-nav">

        <ul class="nav-links">
          {
            navigationItems.map((item) => (
              <li>
                <a href={item.url}>{item.name}</a>
              </li>
            ))
          }
        </ul>
    </div>
    <div class="social-icons">
      {
        socialIcons.map((icon) => (
          <a href={icon.href}>
            <Icon name={icon.icon} />
          </a>
        ))
      }
    </div>
    <MobileNavigation items={navigationItems} />
  </nav>
  

  <style>
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      outline: 2px solid black;
      padding: 1.2rem 1rem;
      font-family: 'Inter';
      font-style: normal;
      font-size: 1.5rem;
    }
    
    .navbar-name {
      font-weight: bold;
    }
    
    .nav-links {
      display: flex;
      gap: 1.5rem;
    }

    .mobile-nav {
        display: none;
    }

    .social-icons {
      display: flex;
      gap: 1.5rem;
      flex-direction: row;
    }

    .social-icons a {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    [data-icon] {
      font-size: 2.5rem;
    }
    
    @media screen and (width < 800px) {
        .nav-links {
            display: none;
        }

        .social-icons {
            display: none;
        }
        
        .mobile-nav {
            display: flex;
        }
        
    }
  </style>