---
export interface Props {
	title: string;
	pageTitle: string;
	description: string;
	socialImg?: URL;
}
const { title, description, pageTitle } = Astro.props;

import LocalFonts from "./LocalFonts.astro";

import { ClientRouter } from 'astro:transitions';
---

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content={`Stephan Pfeiffer | ${title}`} />
	<meta name="description" content={description} />
    <title>{pageTitle}</title>
    <link
    rel="alternate"
    type="application/rss+xml"
    title={pageTitle}
    href={new URL("blog.xml", Astro.site)}
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="sitemap" href="/sitemap-index.xml" />

    <LocalFonts />

    <!-- Matomo -->
<script>
  var _paq = window._paq = window._paq || [];
  /* tracker methods like "setCustomDimension" should be called before "trackPageView" */
  _paq.push(['trackPageView']);
  _paq.push(['enableLinkTracking']);
  (function() {
    var u="//schneidenundfaerben.de/matomo/";
    _paq.push(['setTrackerUrl', u+'matomo.php']);
    _paq.push(['setSiteId', '1']);
    var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
    g.async=true; g.src=u+'matomo.js';

    // Check if s and s.parentNode exist before trying to use insertBefore
    if (s && s.parentNode) {
      s.parentNode.insertBefore(g,s);
    } else {
      // Fallback: if no script tag is found, or it has no parent,
      // append to the head. This is a common practice for analytics scripts.
      // document.head is available in all modern browsers.
      // For older browsers, one might use document.getElementsByTagName('head')[0]
      const head = document.head || document.getElementsByTagName('head')[0];
      if (head) {
        head.appendChild(g);
      } else {
        // As an absolute last resort, though highly unlikely in a valid HTML document
        document.body.appendChild(g);
      }
    }
  })();
</script>
<!-- End Matomo Code -->
</head>

<ClientRouter />