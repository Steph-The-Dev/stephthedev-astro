---
export interface Props {
	title: string;
	pageTitle: string;
	description: string;
	socialImg?: URL;
}
const { title, description, pageTitle } = Astro.props;

import LocalFonts from "./LocalFonts.astro";

import { ClientRouter } from 'astro:transitions';
---

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <meta name="title" content={`Stephan Pfeiffer | ${title}`} />
	<meta name="description" content={description} />
    <title>{pageTitle}</title>
    <link
    rel="alternate"
    type="application/rss+xml"
    title={pageTitle}
    href={new URL("blog.xml", Astro.site)}
/>
    <link rel="icon" type="image/png" href="favicon2.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <LocalFonts />

        <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-KYSS0GE29C"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-KYSS0GE29C');
    </script>
</head>

<ClientRouter />